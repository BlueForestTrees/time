<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
	<Appenders>
		<Console name="Console" target="SYSTEM_OUT">
			<PatternLayout pattern="%d{dd/MM/yyyy HH:mm:ss.SSS} [%t] %-5level %c{1.} - %msg%n" />
		</Console>
		<RollingRandomAccessFile name="StdFile"
								 fileName="/var/log/time/time.web.log" filePattern="/var/log/time/time.web.log">
			<PatternLayout>
				<pattern>%d{HH:mm:ss.SSS} [%t] %-5level %c{1.} - %msg%n</pattern>
			</PatternLayout>
			<SizeBasedTriggeringPolicy size="2 MB" />
		</RollingRandomAccessFile>
	</Appenders>
	<Loggers>
		<Root level="INFO">
			<AppenderRef ref="StdFile"/>
			<AppenderRef ref="Console"/>
		</Root>
		<Logger name="time" level="INFO"/>
	</Loggers>
</Configuration>