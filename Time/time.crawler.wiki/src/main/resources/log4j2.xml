<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
	<Appenders>
		<Console name="Console" target="SYSTEM_OUT">
			<PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n" />
		</Console>
	</Appenders>
	<Loggers>
		<Root level="error">
		</Root>
		<Logger name="org.apache.http" level="error">
			<AppenderRef ref="Console" />
		</Logger>
		<Logger name="edu.uci.ics.crawler4j" level="info">
			<AppenderRef ref="Console" />
		</Logger>
		<Logger name="time" level="debug">
			<AppenderRef ref="Console" />
		</Logger>

		<Logger name="time.crawler" level="debug"/>
		<Logger name="time.crawler.crawl" level="info"/>
		<Logger name="time.storage" level="info"/>
        <Logger name="time.textAnalyser" level="info"/>
	</Loggers>
</Configuration>