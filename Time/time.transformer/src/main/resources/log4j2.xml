<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="warn">
	<Appenders>
		<Console name="Console" target="SYSTEM_OUT">
			<PatternLayout
				pattern="Log4J2 %d{HH:mm:ss.SSS} %-5level %logger{36} - %msg%n" />
		</Console>
		<RollingRandomAccessFile name="StdFile"
			fileName="/log/histoire/transformer/log.txt" filePattern="/log/histoire/transformer/log.txt.%i"
			immediateFlush="true" append="false">
			<PatternLayout>
				<pattern>%d{HH:mm:ss.SSS} [%t] %-5level %logger{36} - %msg%n</pattern>
			</PatternLayout>
			<SizeBasedTriggeringPolicy size="20 MB" />
		</RollingRandomAccessFile>
	</Appenders>
	<Loggers>
		<Root level="error">
			<AppenderRef ref="Console" />
			<AppenderRef ref="StdFile" />
		</Root>
		<Logger name="time.transformer.reader" level="error" />
		<Logger name="time" level="info" />
	</Loggers>
</Configuration>